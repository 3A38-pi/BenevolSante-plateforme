{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-5 rounded" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center mb-4">Mot de passe oublié</h2>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}

            <form method="post">
                <div class="mb-4">
                    <input type="email" name="email" class="form-control form-control-lg" placeholder="Email" required />
                </div>
                <button type="submit" class="btn btn-primary w-100 btn-lg">Envoyer le lien de réinitialisation</button>
            </form>

            <p class="text-center mt-4">
                <a href="{{ path('app_login') }}" class="text-decoration-none">Retour à la connexion</a>
            </p>
        </div>
    </div>
</div>
{% endblock %} 