{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-5 rounded" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center mb-4">Réinitialisation du mot de passe</h2>

            {{ form_start(form) }}
                <div class="mb-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        {{ form_widget(form.password, {
                            'attr': {
                                'class': 'form-control form-control-lg' ~ (form.password.vars.errors|length ? ' is-invalid' : ''),
                                'placeholder': 'Nouveau mot de passe'
                            }
                        }) }}
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.password) }}
                    </div>
                </div>

                <div class="mb-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        {{ form_widget(form.confirmPassword, {
                            'attr': {
                                'class': 'form-control form-control-lg' ~ (form.confirmPassword.vars.errors|length ? ' is-invalid' : ''),
                                'placeholder': 'Confirmer le mot de passe'
                            }
                        }) }}
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.confirmPassword) }}
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-lg">
                    <i class="fas fa-sync-alt me-2"></i>Réinitialiser
                </button>
            {{ form_end(form) }}

            <p class="text-center mt-4">
                <a href="{{ path('app_login') }}" class="text-decoration-none">
                    <i class="fas fa-arrow-left me-2"></i>Retour à la connexion
                </a>
            </p>
        </div>
    </div>
</div>

<style>
    .input-group-text {
        background-color: #e9ecef;
        border: none;
    }
    
    .form-control {
        border-left: none;
    }
    
    .btn-primary {
        background-color: #0d6efd;
        border: none;
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        background-color: #0b5ed7;
    }
    
    .invalid-feedback {
        color: #dc3545;
        display: block;
        margin-top: 0.25rem;
    }
    
    .is-invalid {
        border-color: #dc3545;
    }
    
    .is-invalid:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
    }
</style>
{% endblock %} 