{% extends 'base.html.twig' %}

{% block title %}Nouvelle Candidature{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center text-primary animate__animated animate__fadeIn animate__delay-0.5s">Créer une Nouvelle Candidature</h1>

    <div class="card shadow-lg rounded-lg mt-5 animate__animated animate__fadeInUp">
        <div class="card-body">
            <h4 class="card-title text-center mb-4 text-primary">Formulaire de Candidature</h4>
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            
            <div class="mb-3">
                {{ form_label(form.nom, null, {'attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg border-primary shadow-sm', 'placeholder': 'Entrez votre nom'}}) }}
                <div class="text-danger">
                    {{ form_errors(form.nom) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.prenom, null, {'attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control form-control-lg border-primary shadow-sm', 'placeholder': 'Entrez votre prénom'}}) }}
                <div class="text-danger">
                    {{ form_errors(form.prenom) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.email, null, {'attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg border-primary shadow-sm', 'placeholder': 'Entrez votre email'}}) }}
                <div class="text-danger">
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.telephone, null, {'attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control form-control-lg border-primary shadow-sm', 'placeholder': 'Entrez votre numéro de téléphone'}}) }}
                <div class="text-danger">
                    {{ form_errors(form.telephone) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.cv, null, {'attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.cv, {'attr': {'class': 'form-control form-control-lg border-primary shadow-sm'}}) }}
                <div class="text-danger">
                    {{ form_errors(form.cv) }}
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success btn-lg animate__animated animate__pulse animate__delay-1s">
                    <i class="fas fa-paper-plane"></i> Envoyer la demande
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    <div class="mt-4 text-center">
        <a href="{{ path('app_offre_index') }}" class="btn btn-outline-primary btn-lg">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

{% endblock %}
