{% extends 'base.html.twig' %}

{% block title %}Les Candidats{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Titre avec animation fluide -->
    <h1 class="text-center text-primary animate__animated animate__fadeIn animate__delay-0.5s">Les Candidats</h1>

    <div class="row mt-4">
        {% for condidat in condidats %}
            <div class="col-md-4 mb-4">
                <!-- Card pour chaque candidat -->
                <div class="card shadow-lg rounded-lg animate__animated animate__fadeInUp">
                    <div class="card-body">
                        <h5 class="card-title text-center text-primary">{{ condidat.nom }} {{ condidat.prenom }}</h5>
                        <p class="card-text"><strong>Email :</strong> {{ condidat.email }}</p>
                        <p class="card-text"><strong>Téléphone :</strong> {{ condidat.telephone }}</p>
                        <p class="card-text"><strong>CV :</strong> <a href="{{ condidat.cv }}" target="_blank">Voir le CV</a></p>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_condidat_show', {'id': condidat.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_condidat_edit', {'id': condidat.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center">Aucun candidat trouvé.</p>
            </div>
        {% endfor %}
    </div>

    <!-- Bouton pour créer un nouveau candidat -->
    <div class="mt-4 text-center">
        <a href="{{ path('app_condidat_new') }}" class="btn btn-primary btn-lg animate__animated animate__pulse animate__delay-2s">
            <i class="fas fa-plus-circle"></i> Créer un nouveau candidat
        </a>
    </div>
</div>

<!-- Ajout de Bootstrap, Animate.css et icônes FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

{% endblock %}
