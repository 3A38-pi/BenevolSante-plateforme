{% extends 'base.html.twig' %}

{% block title %}Ajouter un Don{% endblock %}

{% block body %}
<div class="container">
    <div class="form-container">
        <div class="donation-form">
            <h1>Formulaire de Don</h1>

            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                <div class="form-group">
                    {{ form_label(form.titre, 'Titre du Don') }}
                    {{ form_widget(form.titre, {'attr': {'placeholder': 'Entrez le titre du don'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.description, 'Description du Don') }}
                    {{ form_widget(form.description, {'attr': {'rows': '5', 'placeholder': 'Décrivez votre don'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.dateCreation, 'Date de Création') }}
                    {{ form_widget(form.dateCreation) }}
                </div>


                <button type="submit" class="btn btn-primary">Envoyer le Don</button>
            {{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}
