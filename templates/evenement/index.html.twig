{% extends 'base.html.twig' %}

{% block title %}Hello EvenementController!{% endblock %}

{% block body %}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Événements</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Animation d'apparition des éléments au chargement */
        .fade-in {
            animation: fadeIn 1s ease-out forwards;
        }

        @keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Effet de survol des lignes du tableau */
        .table tr {
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

        .table tr:hover {
            transform: translateY(-5px);
            background-color: #f8f9fa;
        }

        /* Animation sur les boutons */
        .btn {
            transition: transform 0.2s ease, background-color 0.2s ease;
        }

        .btn:hover {
            transform: scale(1.1);
            background-color: #28a745;
            color: white;
        }

        /* Effet de zoom pour les boutons */
        .btn-info, .btn-danger {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5 fade-in">
        <h2 class="mb-4">Liste des Événements</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Journée de la Santé</td>
                    <td>2025-03-15</td>
                    <td>
                        <a href="{{path('app_evenementdetailE')}}" class="btn btn-info">Details </a>
                        <a href="{{path('app_evenementformE')}}" class="btn btn-danger">participer</a>
                    </td>
                </tr>
                <tr>
                    <td>Conférence Médicale</td>
                    <td>2025-04-20</td>
                    <td>
                        <a href="{{path('app_evenementdetailE')}}" class="btn btn-info">Details </a>
                        <a href="{{path('app_evenementformE')}}" class="btn btn-danger">participer</a>
                    </td>
                </tr>
                <tr>
                    <td>Atelier de Prévention</td>
                    <td>2025-05-05</td>
                    <td>
                       <a href="{{path('app_evenementdetailE')}}" class="btn btn-info">Details </a>
                        <a href="{{path('app_evenementformE')}}" class="btn btn-danger">participer</a>
                    </td>
                </tr>
                <!-- Ajoute plus d'événements ici -->
            </tbody>
        </table>
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
{% endblock %}
