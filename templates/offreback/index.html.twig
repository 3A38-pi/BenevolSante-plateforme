{% extends 'base2.html.twig' %}

{% block title %}Liste des Offres{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center text-primary mb-4">üìã Liste des Offres</h1>
        
        <div class="d-flex justify-content-end mb-3">
            <a href="{{ path('app_offreback_new') }}" class="btn btn-success shadow-lg">
                <i class="fas fa-plus-circle"></i> Ajouter une Offre
            </a>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover table-bordered text-center shadow-sm rounded">
                <thead class="table-primary">
                    <tr>
                        <th>üìå Id</th>
                        <th>üìÑ Titre de l'Offre</th>
                        <th>üìù Description</th>
                        <th>‚öôÔ∏è Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for offre in offres %}
                    <tr class="animate__animated animate__fadeInUp bg-light">
                        <td><strong>{{ offre.id }}</strong></td>
                        <td class="text-primary"><i class="fas fa-briefcase"></i> {{ offre.titreOffre }}</td>
                        <td>{{ offre.descriptionOffre }}</td>
                        <td>
                            <a href="{{ path('app_offreback_show', {'id': offre.id}) }}" class="btn btn-info btn-sm shadow">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_offreback_edit', {'id': offre.id}) }}" class="btn btn-warning btn-sm shadow">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-muted">‚ùå Aucune offre trouv√©e</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Ajout d'animations et styles suppl√©mentaires -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
{% endblock %}
