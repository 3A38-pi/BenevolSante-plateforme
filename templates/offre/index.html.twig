{% extends 'base.html.twig' %}

{% block title %}Liste des Offres{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center text-primary animate__animated animate__fadeInDown">Nos Offres</h1>

    <div class="row mt-4">
        {% for offre in pagination %}
            <div class="col-md-4">
                <div class="card shadow-lg mb-4 animate__animated animate__zoomIn">
                    <div class="card-body">
                        <h5 class="card-title text-uppercase text-primary fw-bold">{{ offre.titreOffre }}</h5>
                        <p class="card-text text-muted">{{ offre.descriptionOffre|slice(0, 100) ~ '...' }}</p>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_offre_show', {'id': offre.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                           <a href="{{ path('app_condidat_new', {'offre_id': offre.id}) }}" class="btn btn-warning btn-lg">
    <i class="fas fa-edit"></i> Envoyer une demande
</a>


                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center text-muted">
                <p>Aucune offre disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>

    <!-- Ajout des liens de pagination -->
    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(pagination) }}
    </div>

</div>

<!-- Ajout de Bootstrap et d'animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

{% endblock %}
