{% extends 'base.html.twig' %}

{% block title %}Admin Statistics{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">User Statistics by Type</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>User Type</th>
                <th>Number of Users</th>
            </tr>
        </thead>
        <tbody>
            {% for type, count in statistics %}
                <tr>
                    <td>{{ type }}</td>
                    <td>{{ count }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %} 