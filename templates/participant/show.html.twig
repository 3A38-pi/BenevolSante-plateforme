{% extends 'base.html.twig' %}

{% block title %}Détails du Participant{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Titre animé -->
    <h1 class="text-center text-primary animate__animated animate__fadeInDown">Détails du Participant</h1>

    <!-- Carte avec effet shadow et animation -->
    <div class="card shadow-lg rounded-lg mt-4 animate__animated animate__zoomIn">
        <div class="card-body">
            <!-- Badge ID -->
            <span class="badge bg-primary float-end p-2">ID: {{ participant.id }}</span>

            <!-- Nom du participant -->
            <h3 class="card-title text-uppercase text-primary fw-bold text-center mt-2">
                <i class="fas fa-user"></i> {{ participant.nom }} {{ participant.prenom }}
            </h3>

            <!-- Informations détaillées -->
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong><i class="fas fa-envelope"></i> Email :</strong> {{ participant.email }}
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-phone"></i> Téléphone :</strong> {{ participant.numtel }}
                </li>
            </ul>

            <!-- Boutons d'action -->
            <div class="d-flex justify-content-center gap-3 mt-4">
                <a href="{{ path('app_participant_index') }}" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <a href="{{ path('app_participant_edit', {'id': participant.id}) }}" class="btn btn-warning btn-lg">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                {{ include('participant/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>

<!-- Ajout de Bootstrap, Animate.css et FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

{% endblock %}
