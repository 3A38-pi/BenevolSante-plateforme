{% extends 'base2.html.twig' %}

{% block title %}Modifier une Évaluation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4 animated fadeIn">
            <h1 class="text-center text-primary mb-4">
                <i class="fas fa-edit"></i> Modifier l'Évaluation
            </h1>

            <div class="row justify-content-center">
                <div class="col-md-8">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-question-circle"></i> Question de l'évaluation
                            </label>
                            {{ form_widget(form.question, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la question...'}}) }}
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-list-ul"></i> Options (séparées par des virgules)
                            </label>
                            {{ form_widget(form.options, {'attr': {'class': 'form-control', 'placeholder': 'Option 1, Option 2, Option 3...'}}) }}
                        </div>

                        <div class="mb-3 form-switch">
                            {{ form_widget(form.openEnded, {'attr': {'class': 'form-check-input'}}) }}
                            <label class="form-check-label">
                                <i class="fas fa-comment-alt"></i> Autoriser les réponses ouvertes
                            </label>
                        </div>

                        <button type="submit" class="btn btn-success w-100 animated pulse">
                            <i class="fas fa-save"></i> Mettre à jour
                        </button>

                    {{ form_end(form) }}

                    <a href="{{ path('evaluations_with_responses') }}" class="btn btn-secondary w-100 mt-3 animated bounceIn">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                </div>
            </div>
        </div>
    </div>

{% block stylesheets %}
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 600px; /* Réduit la largeur */
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin: 50px auto; /* Centre la boîte */
        }

        h1 {
            color: #e91e63;
            font-size: 1.8rem;
            text-align: center;
            margin-bottom: 20px;
        }

        .form-control, .form-select {
            border-radius: 6px;
            padding: 10px;
            border: 1px solid #ced4da;
            font-size: 1rem;
        }

        .btn {
            width: 100%;
            padding: 12px;
            border-radius: 6px;
            font-size: 1rem;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            margin-top: 10px;
            transition: all 0.3s ease;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
    </style>
{% endblock %}

{% endblock %}
