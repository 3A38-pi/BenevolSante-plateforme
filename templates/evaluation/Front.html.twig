{% extends 'base.html.twig' %}

{% block title %}Toutes les évaluations{% endblock %}

{% block body %}
    <h1 class="text-center text-primary mb-4">
        <i class="fas fa-list-alt"></i> Toutes les évaluations
    </h1>

    <div class="row">
        {% for evaluation in evaluations %}
            <div class="col-md-4 mb-4">
                <div class="evaluation-item card shadow-lg border-0">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title text-dark mb-3">
                            <i class="fas fa-question-circle text-primary"></i> {{ evaluation.question }}
                        </h3>

                        {% if evaluation.options is not empty %}
                            <div class="mb-3">
                                <h5><i class="fas fa-list-ul text-secondary"></i> Options:</h5>
                                <ul class="list-group">
                                    {% for option in evaluation.options %}
                                        <li class="list-group-item">
                                            <i class="fas fa-check-circle text-success"></i> {{ option }}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        <div class="mt-auto text-center">
                            <a href="{{ path('show_evaluation', { 'id': evaluation.id }) }}" 
                               class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> Voir plus
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center text-muted">
                <i class="fas fa-exclamation-circle"></i> Aucune évaluation disponible.
            </p>
        {% endfor %}
    </div>

    <style>
        .evaluation-item {
            transition: transform 0.3s ease-in-out;
            border-radius: 10px;
            min-height: 300px;  /* Garantir une hauteur minimale uniforme */
        }
        .evaluation-item:hover {
            transform: scale(1.05);
        }
        .btn-outline-primary {
            border-radius: 20px;
        }
        .card-body {
            display: flex;
            flex-direction: column;
        }
        .card-title {
            flex-grow: 1; /* Cela permet à la zone du titre d'être flexible */
        }
    </style>
{% endblock %}
