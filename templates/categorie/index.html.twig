    <div class="text-center mt-4">
        <a href="{{ path('app_categorie_new') }}" class="btn btn-success btn-lg animate__animated animate__bounceIn hvr-bounce-to-right">
            <i class="fas fa-plus-circle"></i> Ajouter une Cat√©gorie
        </a>
    </div>
</div>

<!-- Ajout de Bootstrap, Animate.css, Hover.css et FontAwesome -->
