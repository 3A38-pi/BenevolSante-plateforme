                            <i class="fas fa-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning btn-sm hvr-grow">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center text-muted animate__animated animate__fadeIn">Aucune cat√©gorie trouv√©e</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

