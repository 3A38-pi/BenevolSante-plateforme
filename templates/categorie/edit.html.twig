{% extends 'base2.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Titre animé -->
        <h1 class="text-center text-primary animate__animated animate__fadeInDown">✏️ Edit Category</h1>

        <!-- Affichage des erreurs s'il y en a -->
        {% if app.flashes('error') is not empty %}
            <div class="alert alert-danger animate__animated animate__fadeIn animate__delay-0.3s">
                {% for flash_message in app.flashes('error') %}
                    <p>{{ flash_message }}</p>
                {% endfor %}
            </div>
        {% endif %}

        <!-- Formulaire de mise à jour de la catégorie avec effet de zoom -->
        <div class="mb-4 animate__animated animate__zoomIn animate__faster">
            {{ include('categorie/_form.html.twig', {'button_label': 'Update'}) }}
        </div>

        <!-- Lien pour revenir à la liste des catégories avec effet de survol -->
        <div class="text-center mt-4">
            <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary btn-lg hvr-grow">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
        </div>

        <!-- Formulaire de suppression de la catégorie -->
        <div class="mt-4 animate__animated animate__fadeInUp">
            {{ include('categorie/_delete_form.html.twig') }}
        </div>
    </div>

    <!-- Ajout de Bootstrap, Animate.css, Hover.css et FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/hover.css/2.3.1/css/hover-min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
{% endblock %}
