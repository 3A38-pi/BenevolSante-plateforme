{% extends 'base.html.twig' %}

{% block title %}Ajouter un Don{% endblock %}

{% block body %}
<div class="container">
    <div class="form-container">
        <div class="donation-form">
            <h1>Formulaire de Don</h1>

            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

         <div class="form-group">
            {{ form_label(form.titre) }}
            {{ form_widget(form.titre, {'class': 'form-control'}) }}
            {{ form_errors(form.titre) }}
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'class': 'form-control'}) }}
            {{ form_errors(form.description) }}
        </div>

                <div class="form-group">
                    {{ form_label(form.dateCreation, 'Date de Cr√©ation') }}
                    {{ form_widget(form.dateCreation, {'class': 'form-control'}) }}
                </div>
        <div class="form-group">
            {{ form_label(form.categorie) }}
            {{ form_widget(form.categorie, {'class': 'form-control'}) }}
            {{ form_errors(form.categorie) }}
        </div>

        <div class="form-group">
            {{ form_label(form.image) }}
            {{ form_widget(form.image, {'class': 'form-control'}) }}
            {{ form_errors(form.image) }}
        </div>


            {{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}
