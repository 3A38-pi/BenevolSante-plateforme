{% extends 'base.html.twig' %}

{% block title %}Ajouter un Don{% endblock %}

{% block body %}
<div class="container">
    <div class="form-container">
        <div class="donation-form">
            <h1>Formulaire de Don</h1>

            {# Désactivation de la validation HTML5 côté client #}
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'novalidate': 'novalidate'}}) }}

            <!-- Titre -->
            <div class="form-group">
                {{ form_label(form.titre, 'Titre du Don') }}
                {{ form_widget(form.titre, {
                    'attr': {'class': 'form-control ' ~ (form.titre.vars.errors|length > 0 ? 'is-invalid' : '')}
                }) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.titre) }}
                </div>
            </div>

            <!-- Description -->
            <div class="form-group">
                {{ form_label(form.description, 'Description du Don') }}
                {{ form_widget(form.description, {
                    'attr': {'class': 'form-control ' ~ (form.description.vars.errors|length > 0 ? 'is-invalid' : '')}
                }) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <!-- Date de Création -->
            <div class="form-group">
                {{ form_label(form.dateCreation, 'Date de Création') }}
                {{ form_widget(form.dateCreation, {
                    'attr': {'class': 'form-control ' ~ (form.dateCreation.vars.errors|length > 0 ? 'is-invalid' : '')}
                }) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.dateCreation) }}
                </div>
            </div>

            <!-- Catégorie -->
            <div class="form-group">
                {{ form_label(form.categorie, 'Catégorie') }}
                {{ form_widget(form.categorie, {
                    'attr': {'class': 'form-control ' ~ (form.categorie.vars.errors|length > 0 ? 'is-invalid' : '')}
                }) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.categorie) }}
                </div>
            </div>

            <!-- Image -->
            <div class="form-group">
                {{ form_label(form.image, 'Image du Don') }}
                {{ form_widget(form.image, {
                    'attr': {'class': 'form-control ' ~ (form.image.vars.errors|length > 0 ? 'is-invalid' : '')}
                }) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.image) }}
                </div>
            </div>



            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
