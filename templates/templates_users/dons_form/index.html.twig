{% extends 'base.html.twig' %}

{% block title %}Ajouter un Don{% endblock %}

{% block body %}
<div class="container">
    <div class="form-container">
        <div class="donation-form">
            <h1>Formulaire de Don</h1>

            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

                <div class="form-group">
                    {{ form_label(form.titre, 'Titre du Don') }}
                    {{ form_widget(form.titre, {'attr': {'placeholder': 'Entrez le titre du don', 'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.description, 'Description du Don') }}
                    {{ form_widget(form.description, {'attr': {'rows': '5', 'placeholder': 'Décrivez votre don', 'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.dateCreation, 'Date de Création') }}
                    {{ form_widget(form.dateCreation, {'class': 'form-control'}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.categorie, 'Catégorie') }}
                    {{ form_widget(form.categorie, {'class': 'form-control'}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.image, 'Image du Don') }}
                    {{ form_widget(form.image, {'class': 'form-control'}) }}
                </div>


            {{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}
