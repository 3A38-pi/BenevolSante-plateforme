{% extends 'base.html.twig' %}

{% block Navbar %}
  <a><button onclick="history.back()" class="back-btn">Retour</button></a>
{% endblock %}



{% block body %}
<head>
    <link rel="stylesheet" href="{{ asset('css/articledescription.css') }}">
</head>
<body>

<div class="container-xxl">
    <h1>{{ article.titre }}</h1>
    
    <div class="article-image-container">
        <img src="{{ asset('uploads/images/' ~ article.image) }}" class="article-image" alt="Article Image">
    </div>
    
    <p class="description">
        {{ article.description }}
    </p>

    <div class="divider"></div>

    <div class="comments-section">
        <h3>3 commentaires</h3>
        <div class="comment">
            <strong>Utilisateur 1</strong>
            <p>Test</p>
            <span class="reply-btn" onclick="showReplyBox(this)">Reply</span>
            <div class="reply-box">
                <textarea rows="3" placeholder="Écrire une réponse..."></textarea>
                <button class="submit-btn">Envoyer</button>
            </div>
        </div>
        {# <div class="comment">
            <strong>Utilisateur 2</strong>
            <p>Second test</p>
            <span class="reply-btn" onclick="showReplyBox(this)">Reply</span>
            <div class="reply-box">
                <textarea rows="3" placeholder="Écrire une réponse..."></textarea>
                <button class="submit-btn">Envoyer</button>
            </div>
        </div>
    </div> #}

   <br>

    <div class="add-comment">
        <h3>Ajouter un commentaire</h3>
        <textarea rows="4" placeholder="Écrire un commentaire..."></textarea>
        <button class="submit-btn">Poster</button>
    </div>
</div>

<script>
    function showReplyBox(element) {
        let replyBox = element.nextElementSibling;
        replyBox.style.display = replyBox.style.display === "block" ? "none" : "block";
    }
</script>

</body>
</html>
{% endblock %}


