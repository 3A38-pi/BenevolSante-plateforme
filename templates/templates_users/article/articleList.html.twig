{% extends 'base.html.twig' %}

{% block body %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog - Articles</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/articlelist.css') }}">
</head>

<body>
        {% for article in articles %}

    <div class="container">
        <div class="article-header">
            <h1> {{ article.titre }} </h1>
            <p class="article-meta">
                <i class="fas fa-clock"></i> 12:37 AM 
                <i class="fas fa-comments"></i>  {{ article.nombreCommentaire }} comments
            </p>
        </div>

        <div class="article-image-container">
            <img src="{{ asset('uploads/images/' ~ article.image) }}" class="article-image" alt="Article Image">
        </div>

        <p class="article-description">
            {{ article.description }}
        </p>

        <div class="article-footer">
            <p class="tags">
                <i class="fas fa-tags"></i> {{ article.tags }}
            </p>
            <p class="tags">
                <i class="bi bi-mouse-fill"></i> <a href="{{ path('articleDescription') }}">Read More</a>
            </p>
        </div>
    </div>

    {% endfor %}


</body>
</html>
{% endblock %}
