{% extends 'base2.html.twig' %}

{% block title %}Liste des Participants{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Titre anim√© -->
    <h1 class="text-center text-primary animate__animated animate__fadeInDown">üìù Liste des Participants</h1>

    <!-- Table avec animations et style Bootstrap -->
    <div class="table-responsive animate__animated animate__zoomIn animate__faster">
        <table class="table table-hover table-bordered shadow mt-4">
            <thead class="table-primary text-center">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                    <th>Email</th>
                    <th>T√©l√©phone</th>
                    <th>√âv√©nement</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for participant in participants %}
                <tr class="animate__animated animate__fadeInUp animate__delay-0.5s">
                    <td class="text-center fw-bold">{{ participant.id }}</td>
                    <td>{{ participant.nom }}</td>
                    <td>{{ participant.prenom }}</td>
                    <td>{{ participant.email }}</td>
                    <td>{{ participant.numtel }}</td>
                    <td class="text-center">
                        {% if participant.event %}
                            <span class="badge bg-success">{{ participant.event.nom }}</span>
                        {% else %}
                            <span class="badge bg-danger">Aucun √©v√©nement</span>
                        {% endif %}
                    </td>
                    <td class="text-center">
                        <a href="{{ path('app_participantback_show', {'id': participant.id}) }}" class="btn btn-info btn-sm hvr-grow">
                            <i class="fas fa-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_participantback_edit', {'id': participant.id}) }}" class="btn btn-warning btn-sm hvr-grow">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center text-muted animate__animated animate__fadeIn">Aucun participant trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<!-- Ajout de Bootstrap, Animate.css, Hover.css et FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/hover.css/2.3.1/css/hover-min.css">
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

{% endblock %}
